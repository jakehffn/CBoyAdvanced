{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build for Web",
            "type": "shell",
            "command": "emcc graphics/src/main.c -o web/public/age.js -sMIN_WEBGL_VERSION=2 -sMAX_WEBGL_VERSION=2",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Build for Web and Run",
            "type": "shell",
            "command": "npm run start",
            "options": {
                "cwd": "${workspaceFolder}/web"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":[
                "Build for Web"
            ]
        }
    ]
}